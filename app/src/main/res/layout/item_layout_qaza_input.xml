<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="8dp"
    android:layout_marginTop="16dp"
    >

    <TextView
        android:id="@+id/layout_qaza_input_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="start"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_qaza_input_counter"
        app:layout_constraintEnd_toStartOf="@id/layout_qaza_input_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_qaza_input_counter"
        tools:text="Таң"
        />

    <kz.qazatracker.widgets.CounterWidget
        android:id="@+id/layout_qaza_input_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:counter="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_qaza_input_title"
        app:layout_constraintTop_toTopOf="parent"
        app:min_counter_value="0"
        app:max_counter_value="1000000"
        />

    <TextView
        android:id="@+id/layout_qaza_input_sapar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="start"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_qaza_input_sapar_counter"
        app:layout_constraintEnd_toStartOf="@id/layout_qaza_input_sapar_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_qaza_input_sapar_counter"
        android:text="@string/solat_sapar"
        />

    <kz.qazatracker.widgets.CounterWidget
        android:id="@+id/layout_qaza_input_sapar_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:counter="0"
        app:layout_constraintEnd_toEndOf="@id/layout_qaza_input_counter"
        app:layout_constraintStart_toStartOf="@id/layout_qaza_input_counter"
        app:layout_constraintTop_toBottomOf="@id/layout_qaza_input_counter"
        app:min_counter_value="0"
        app:max_counter_value="1000000"
        />

</androidx.constraintlayout.widget.ConstraintLayout>