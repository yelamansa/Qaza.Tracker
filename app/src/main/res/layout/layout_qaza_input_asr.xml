<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/layout_qaza_input_asr_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="start"
        android:text="Екінді"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_qaza_input_asr_counter"
        app:layout_constraintEnd_toStartOf="@id/layout_qaza_input_asr_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_qaza_input_asr_counter" />

    <kz.qazatracker.widgets.DefaultCounterWidget
        app:counter="0"
        android:id="@+id/layout_qaza_input_asr_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_qaza_input_asr_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:min_counter_value="0" />

</androidx.constraintlayout.widget.ConstraintLayout>